#define F_CPU 1600000
#include <avr/io.h>
#include <util/delay.h>


int main(void)
{
    DDRB |= (1<<DDB0);	
	
	DDRC &= (~(1<<DDC0));
	
	
			
		
    while (1) 
    {
		  if(PINC & (1<<PINC0))
		  {
			PORTB |= (1<<PB0);  
		  }
		  else
		  {
			PORTB &= (~(1<<PB0));  
		  }
			

	
		
	}
}
